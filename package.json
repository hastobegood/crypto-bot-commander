{
  "name": "@hastobegood/crypto-bot-commander",
  "version": "0.1.0",
  "license": "MIT",
  "private": true,
  "engines": {
    "node": "^14"
  },
  "type": "module",
  "scripts": {
    "prepare": "yarn husky install",
    "clean": "rm -rf dist .aws-sam reports",
    "build": "yarn tsc",
    "bundle": "yarn webpack",
    "bundle:analyze": "yarn webpack && yarn webpack-bundle-analyzer dist/webpack/stats.json",
    "test": "yarn jest",
    "test:coverage": "yarn jest --collectCoverage",
    "lint": "yarn eslint . --ext .ts",
    "lint:fix": "yarn eslint . --ext .ts --fix",
    "lint:report": "yarn eslint . --ext .ts --format json -o reports/eslint-report.json ",
    "deploy:test": "sam build && sam deploy --config-env test --tags Environment=test Application=CryptoBotCommander",
    "deploy:prod": "sam build && sam deploy --config-env prod --tags Environment=prod Application=CryptoBotCommander"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.67.0",
    "@aws-sdk/client-secrets-manager": "^3.67.0",
    "@aws-sdk/client-sqs": "^3.67.0",
    "@aws-sdk/lib-dynamodb": "^3.67.0",
    "@hastobegood/crypto-bot-artillery": "^0.12.0",
    "aws-xray-sdk-core": "^3.3.4",
    "lodash-es": "^4.17.21",
    "serialize-error": "^8.1.0",
    "source-map-support": "^0.5.21"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.93",
    "@types/copy-webpack-plugin": "^10.1.0",
    "@types/jest": "^27.4.1",
    "@types/lodash-es": "^4.17.6",
    "@types/node": "14.x",
    "@types/randomstring": "^1.1.8",
    "@types/source-map-support": "^0.5.4",
    "@types/webpack-bundle-analyzer": "^4.4.1",
    "@types/webpack-node-externals": "^2.5.3",
    "@typescript-eslint/eslint-plugin": "^5.18.0",
    "@typescript-eslint/parser": "^5.20.0",
    "copy-webpack-plugin": "^10.2.4",
    "eslint": "^8.13.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "jest-sonar-reporter": "^2.0.0",
    "mockdate": "^3.0.5",
    "prettier": "^2.6.2",
    "randomstring": "^1.2.2",
    "ts-jest": "^27.1.4",
    "ts-loader": "^9.2.8",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.3",
    "webpack": "^5.72.0",
    "webpack-bundle-analyzer": "^4.5.0",
    "webpack-cli": "^4.9.2",
    "webpack-node-externals": "^3.0.0"
  },
  "jestSonar": {
    "reportPath": "reports"
  }
}
